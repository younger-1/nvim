{
    // [coc]
    "coc.preferences.extensionUpdateCheck": "weekly",
    "coc.preferences.formatOnType": true,
    "coc.preferences.formatOnSave": true,
    "coc.preferences.enableMessageDialog": true,
    // "coc.preferences.useQuickfixForLocations": true,
    // "coc.preferences.jumpCommand": "drop",
    "coc.preferences.jumpCommand": "rightbelow pedit",
    // [suggest]
    // "suggest.noselect": true,
    // "suggest.enablePreselect": false,
    // "suggest.insertMode": "insert",
    "suggest.virtualText": true,
    "suggest.formatItems": [
        "abbr",
        "menu",
        "kind",
        "shortcut",
    ],
    "suggest.selection": "recentlyUsed",
    "suggest.floatConfig": {
        "border": true,
        "rounded": true,
    },
    // [list]
    // https://zhuanlan.zhihu.com/p/71846145
    "list.source.files.defaultOptions": [
        "--number-select", // ÂèØÂú®ÊèíÂÖ•Ê®°ÂºèÂú®Áõ¥Êé•ËæìÂÖ• 1 ~ 9 Âø´ÈÄüË∑≥ËΩ¨Âà∞ÂØπÂ∫îË°åÂπ∂ÊâßË°åÈªòËÆ§Êìç‰Ωú
    ],
    // "list.source.files.args": [
    //     "--hidden",
    //     "--glob=!.git/*",
    //     "--files"
    // ],
    "list.insertMappings": {
        "<C-q>": "do:exit",
        "<C-h>": "do:help",
    },
    "list.normalMappings": {
        "q": "do:exit",
    },
    // [outline]
    "outline.autoPreview": true,
    "outline.switchSortKey": "<C-s>",
    "outline.togglePreviewKey": "p",
    // [tree]
    "tree.key.close": "q",
    "tree.key.actions": "<tab>",
    "tree.key.invoke": "<cr>",
    "tree.key.toggle": "o",
    "tree.key.toggleSelection": "t",
    "tree.key.selectNext": "<C-j>",
    "tree.key.selectPrevious": "<C-k>",
    "tree.key.activeFilter": "f",
    "tree.key.collapseAll": "M",
    // [signature]
    // "signature.target": "echo",
    "signature.preferShownAbove": true,
    "signature.floatConfig": {
        "border": true,
        "rounded": true,
        "winblend": 10,
        "title": "[xy]",
        "close": true,
    },
    // [hover]
    "hover.floatConfig": {
        "border": true,
    },
    // [diagnostic]
    "diagnostic.floatConfig": {
        "border": true,
    },
    "diagnostic.errorSign": "Ôôô ",
    "diagnostic.warningSign": "Ôî© ",
    "diagnostic.infoSign": "Ôëâ ",
    "diagnostic.hintSign": "Ô†µ ",
    //
    // "diagnostic.errorSign": "‚úó",
    // "diagnostic.warningSign": "‚àÜ",
    // "diagnostic.infoSign": "‚ñ∏",
    // "diagnostic.hintSign": "‚ñ™Ô∏é",
    //
    // "diagnostic.errorSign": "‚õî",
    // "diagnostic.warningSign": "üö∏",
    // "diagnostic.infoSign": "üç≥",
    // "diagnostic.hintSign": "üéÖ",
    //
    "diagnostic.virtualText": true,
    "diagnostic.virtualTextPrefix": "‚òµ ",
    "diagnostic.virtualTextCurrentLineOnly": true,
    // "diagnostic.displayByAle": true,
    // [suggest]
    "suggest.completionItemKindLabels": {
        "keyword": "\uf1de",
        "variable": "\ue79b",
        "value": "\uf89f",
        "operator": "\u03a8",
        "function": "\u0192",
        "reference": "\ufa46",
        "constant": "\uf8fe",
        "method": "\uf09a",
        "struct": "\ufb44",
        "class": "\uf0e8",
        "interface": "\uf417",
        "text": "\ue612",
        "enum": "\uf435",
        "enumMember": "\uf02b",
        "module": "\uf40d",
        "color": "\ue22b",
        "property": "\ue624",
        "field": "\uf9be",
        "unit": "\uf475",
        "event": "\ufacd",
        "file": "\uf723",
        "folder": "\uf114",
        "snippet": "\ue60b",
        "typeParameter": "\uf728",
        "default": "\uf29c"
    },
    // [source]
    "coc.source.file.priority": 90,
    "coc.source.file.ignoreHidden": false,
    "coc.source.around.firstMatch": false,
    "coc.source.buffer.firstMatch": false,
    // [snippet]
    "snippet.highlight": true,
    // [dialog]
    // "dialog.floatHighlight": "CocDialogFloat",
    // "dialog.floatBorderHighlight": "CocDialogFloatBorder",
    // [language]
    "[lua]": {
        "coc.preferences.formatOnType": false,
        "coc.preferences.formatOnSave": false
    },
    // [lsp]
    // https://github.com/neoclide/coc.nvim/wiki/Language-servers
    "languageserver": {
        // "golang": {
        //     "command": "gopls",
        //     "args": [],
        //     "filetypes": [
        //         "go"
        //     ],
        //     "rootPatterns": [
        //         "go.work",
        //         "go.mod",
        //     ],
        //     "initializationOptions": {},
        //     "settings": {
        //         "gopls": {
        //             "semanticTokens": true,
        //             "usePlaceholders": true,
        //             "analyses": {
        //                 "unusedparams": true,
        //             },
        //         }
        //     },
        // },
    },
    // [coc-pairs]
    // "pairs.enableBackspace": false,
    // [coc-explorer]
    "explorer.git.showIgnored": true,
    "explorer.icon.enableNerdfont": true,
    // "explorer.icon.enableVimDevicons": true,
    "explorer.filename.colored.enable": true,
    "explorer.file.showHiddenFiles": true,
    // [coc language specific plugins]
    // [vim]
    "vimlsp.indexes.runtimepath": true,
    "vimlsp.indexes.gap": 10,
    "vimlsp.indexes.count": 3,
    "vimlsp.suggest.fromVimruntime": true,
    // "vimlsp.suggest.fromRuntimepath": true,
    // [python]
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": [
        "--line-length",
        "100"
    ],
    // [java]
    // "java.jdt.ls.home": ,
    // [rust]
    "rust-analyzer.server.path": "rust-analyzer",
    // [lua]
    "Lua.format.enable": true,
    // "Lua.format.defaultConfig": {
    //     // follow 'expandtab'
    //     "indent_style": "space",
    //     // follow 'shiftwidth'
    //     "indent_size": "4"
    // },
    "Lua.completion.callSnippet": "Replace",
    "Lua.completion.postfix": "@",
    "Lua.completion.displayContext": 2,
    "Lua.diagnostics.globals": [
        "vim",
    ],
    "Lua.runtime.special": {
        "rc": "require",
        "rr": "require"
    },
    // [go]
    "go.goplsOptions": {
        "semanticTokens": true,
        "usePlaceholders": true,
        "experimentalPostfixCompletions": true,
        "analyses": {
            "unusedparams": true,
            "shadow": true,
        },
        "staticcheck": true,
        "hints": {
            // "assignVariableTypes": true,
            // "compositeLiteralFields": true,
            "parameterNames": true,
        }
    },
}
